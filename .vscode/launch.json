{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": ["C#: API Debug", "Angular: Chrome Debug"]
    }
  ],
  "configurations": [
    {
      "name": "C#: API Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/API/API.csproj"
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Angular: Chrome Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true
    }
  ]
}
